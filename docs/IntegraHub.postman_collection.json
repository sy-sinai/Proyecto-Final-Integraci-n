{
	"info": {
		"_postman_id": "integrahub-collection",
		"name": "IntegraHub API Collection",
		"description": "Colección de pruebas para el sistema de integración Order-to-Cash",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{"key": "base_url", "value": "http://localhost:8082"},
		{"key": "hub_url", "value": "http://localhost:8081"},
		{"key": "analytics_url", "value": "http://localhost:8083"},
		{"key": "token", "value": ""}
	],
	"item": [
		{
			"name": "1. Auth - Login (Happy Path)",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{hub_url}}/token?username=admin&password=password123",
					"host": ["{{hub_url}}"],
					"path": ["token"],
					"query": [
						{"key": "username", "value": "admin"},
						{"key": "password", "value": "password123"}
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"pm.environment.set('token', jsonData.access_token);",
							"pm.test('Token received', function() {",
							"    pm.expect(jsonData.access_token).to.not.be.undefined;",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "1b. Auth - Login (Error - Bad Credentials)",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{hub_url}}/token?username=admin&password=wrongpassword",
					"host": ["{{hub_url}}"],
					"path": ["token"],
					"query": [
						{"key": "username", "value": "admin"},
						{"key": "password", "value": "wrongpassword"}
					]
				}
			}
		},
		{
			"name": "2. Protected Route (Happy Path)",
			"request": {
				"method": "GET",
				"header": [
					{"key": "Authorization", "value": "Bearer {{token}}"}
				],
				"url": {
					"raw": "{{hub_url}}/protected",
					"host": ["{{hub_url}}"],
					"path": ["protected"]
				}
			}
		},
		{
			"name": "2b. Protected Route (Error - No Token)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{hub_url}}/protected",
					"host": ["{{hub_url}}"],
					"path": ["protected"]
				}
			}
		},
		{
			"name": "3. Get Inventory",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/inventory",
					"host": ["{{base_url}}"],
					"path": ["inventory"]
				}
			}
		},
		{
			"name": "4. Create Order (Happy Path)",
			"request": {
				"method": "POST",
				"header": [
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"customer_name\": \"Juan Pérez\",\n    \"product\": \"LAPTOP-001\",\n    \"quantity\": 2\n}"
				},
				"url": {
					"raw": "{{base_url}}/orders",
					"host": ["{{base_url}}"],
					"path": ["orders"]
				}
			}
		},
		{
			"name": "4b. Create Order (Error - No Stock)",
			"request": {
				"method": "POST",
				"header": [
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"customer_name\": \"Test User\",\n    \"product\": \"LAPTOP-001\",\n    \"quantity\": 9999\n}"
				},
				"url": {
					"raw": "{{base_url}}/orders",
					"host": ["{{base_url}}"],
					"path": ["orders"]
				}
			}
		},
		{
			"name": "4c. Create Order (Error - Invalid Product)",
			"request": {
				"method": "POST",
				"header": [
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"customer_name\": \"Test User\",\n    \"product\": \"PRODUCTO-INEXISTENTE\",\n    \"quantity\": 1\n}"
				},
				"url": {
					"raw": "{{base_url}}/orders",
					"host": ["{{base_url}}"],
					"path": ["orders"]
				}
			}
		},
		{
			"name": "5. List Orders",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/orders",
					"host": ["{{base_url}}"],
					"path": ["orders"]
				}
			}
		},
		{
			"name": "6. Get Order by ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/orders/1",
					"host": ["{{base_url}}"],
					"path": ["orders", "1"]
				}
			}
		},
		{
			"name": "6b. Get Order (Error - Not Found)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/orders/99999",
					"host": ["{{base_url}}"],
					"path": ["orders", "99999"]
				}
			}
		},
		{
			"name": "7. Health Check - Order Service",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": ["{{base_url}}"],
					"path": ["health"]
				}
			}
		},
		{
			"name": "8. Health Check - IntegraHub",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{hub_url}}/health",
					"host": ["{{hub_url}}"],
					"path": ["health"]
				}
			}
		},
		{
			"name": "9. System Status",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{hub_url}}/status",
					"host": ["{{hub_url}}"],
					"path": ["status"]
				}
			}
		},
		{
			"name": "10. Analytics - Metrics",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{analytics_url}}/metrics",
					"host": ["{{analytics_url}}"],
					"path": ["metrics"]
				}
			}
		},
		{
			"name": "11. Analytics - Events",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{analytics_url}}/events",
					"host": ["{{analytics_url}}"],
					"path": ["events"]
				}
			}
		},
		{
			"name": "12. Analytics - Order Trace",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{analytics_url}}/events/1",
					"host": ["{{analytics_url}}"],
					"path": ["events", "1"]
				}
			}
		}
	]
}
